{
  "env": {
    "CLAUDE_CODE_TASK_LIST_ID": "todo-app"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/filter-test-output.sh",
            "timeout": 600,
            "statusMessage": "테스트 출력 필터링 중..."
          }
        ]
      }
    ]
  },
  "plansDirectory": "./.claude/plans",
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true
  }
}
